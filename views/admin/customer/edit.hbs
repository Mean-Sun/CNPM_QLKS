<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-11">
                <h6 class="m-0 font-weight-bold text-primary">Sửa thông tin khách hàng</h6>
            </div>
        </div>
    </div>
    {{#if message}}
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-11">
                    <h4 class="m-0 font-weight-bold text-primary">{{message}}</h4>
                </div>
            </div>
        </div>
    {{/if}}
    <div class="card-body">
        <div style="overflow: hidden;" class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <form action="/customer/edit/{{customer.MaKH}}" method="post" id="createForm">
                    <!--<div class="form-group">
                        <label for="exampleInputEmail1">Mã khách hàng</label>
                        <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter email" name="MaKH" value="{{MaKH}}">
                    </div>-->
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên khách hàng</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="TenKH"
                            value="{{customer.TenKH}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">CMND</label>
                        <input type="number" class="form-control" id="exampleInputPassword1" name="CMND"
                            value="{{customer.CMND}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Số điện thoại</label>
                        <input class="form-control" id="exampleInputPassword1" style="number" name="SDT"
                            value="{{customer.SDT}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Địa chỉ</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="DiaChi"
                            value="{{customer.DiaChi}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Mã loại KH</label>
                        <select class="form-select" id="exampleInputPassword1" aria-label="Default select example"
                            name="LoaiKH">
                            <option value="1">Khách nội địa</option>
                            <option value="2">Khách nước ngoài</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">isDel</label>
                        <input class="form-control" id="exampleInputPassword1" type="number" min="0" max="1"
                               name="isDel" value="{{customer.isDel}}">
                    </div>
                    <button type="submit" class="btn btn-primary" value="edit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>