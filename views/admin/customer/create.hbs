        </div>
    </div>
    <div class="card-body">
        <div style="overflow: hidden;" class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <form action="/customer/create" method="post" id="createForm" >
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mã khách hàng</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                               placeholder="Nhập mã khách hàng" name="MaKH" value="{{MaKH}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên khách hàng</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Tên KH"
                               name="Nhập tên khách hàng" value="{{TenKH}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">CMND</label>
                        <input class="form-control" id="exampleInputPassword1" placeholder="CMND" style="number"
                               name="CMND" value="{{CMND}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Số điện thoại</label>
                        <input class="form-control" id="exampleInputPassword1" placeholder="SĐT" style="number"
                               name="SDT" value="{{SDT}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Địa chỉ</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Địa chỉ"
                               name="DiaChi" value="{{DiaChi}}">
                    </div>

                    {{!-- <div class="form-group">
                        <label for="exampleFormControlFile1">Loại Khách hàng</label>
                        <input class="form-control" id="exampleInputPassword1" placeholder="Loại khách sạn"
                               name="LoaiKH" value="{{LoaiKH}}">
                    </div> --}}
