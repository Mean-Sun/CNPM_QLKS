                    <label for="exampleFormControlFile1">Loại Khách hàng</label>
                    <select class="form-select" id="exampleInputPassword1" aria-label="Default select example" name="LoaiKH" >
                        <option value="Khách nội địa">Khách nội địa</option>
                        <option value="Khách nước ngoài">Khách nước ngoài</option>
                    </select>
                     </div>
                    <button type="submit" class="btn btn-primary" value="create">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
