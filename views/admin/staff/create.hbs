<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-11">
                <h6 class="m-0 font-weight-bold text-primary">Thêm nhân viên mới</h6>
            </div>
        </div>
    </div>
    {{#if message}}
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-11">
                    <h4 class="m-0 font-weight-bold text-primary" >{{message}}</h4>
                </div>
            </div>
        </div>
    {{/if}}
    <div class="card-body">
        <div style="overflow: hidden;" class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <form action="/staff/create" method="post" id="createForm">
                    <!--<div class="form-group">
                        <label for="exampleInputEmail1">Mã nhân viên</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Nhập mã nhân viên" name="MaNV" value="{{MaNV}}">
                    </div>-->
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên nhân viên</label>
                        <input type="text" class="form-control" id="exampleInputPassword1"
                               placeholder="Nhập tên nhân viên" name="TenNV" value="{{TenNV}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Địa chỉ</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập địa chỉ"
                               name="DiaChi" value="{{DiaChi}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ngày sinh</label>
                        <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Nhập ngày sinh"
                               name="NgaySinh" value="{{NgaySinh}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Số điện thoại</label>
                        <input class="form-control" id="exampleInputPassword1" placeholder="Nhập số điện thoại"
                               type="number" name="SDT" value="{{SDT}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Email</label>
                        <input type="email" class="form-control" id="exampleInputPassword1" placeholder="Nhập email"
                               name="email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Mật khẩu</label>
                        <input class="form-control" id="exampleInputPassword1" placeholder="Password" name="MatKhau"
                               type="password" value="{{MatKhau}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Xác nhận mật khẩu</label>
                        <input class="form-control" id="exampleInputPassword1" placeholder="rePassword" name="reMatKhau"
                               type="password" value="{{reMatKhau}}">
                    </div>
                    {{!-- <div class="form-group">
                        <label for="exampleFormControlFile1">Chức vụ</label>
                        <input class="form-control" id="exampleInputPassword1" placeholder="Nhập chức vụ" name="Role"
                            value="{{Role}}">

                    </div> --}}
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Chức vụ</label>
                        <select class="form-select" id="exampleInputPassword1" aria-label="Default select example"
                                name="Role">
                            <option value="Admin">Admin</option>
                            <option value="NV">Nhân viên</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2" value="create">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>