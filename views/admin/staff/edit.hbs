<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-11">
                <h6 class="m-0 font-weight-bold text-primary">Sửa thông tin nhân viên</h6>
            </div>
            {{!-- <div class="col-sm-1">
                <a style="font-size: 12px;" class="btn btn-info" href="/create">Thêm mới</a>
            </div> --}}
        </div>
    </div>
    <div class="card-body">
        <div style="overflow: hidden;" class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <form action="/staff/edit/{{MaNV}}" method="post" id="createForm" >
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mã nhân viên</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter email" name="MaNV" value="{{MaNV}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên nhân viên</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" 
                            name="TenNV" value="{{TenNV}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Địa chỉ</label>
                        <input type="number" class="form-control" id="exampleInputPassword1" 
                            name="DiaChi" value="{{DiaChi}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ngày sinh</label>
                        <input type="date" class="form-control" id="exampleInputPassword1" 
                            name="NgaySinh" value="{{NgaySinh}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Số điện thoại</label>
                          <input class="form-control" id="exampleInputPassword1" 
                            name="SDT" value="{{SDT}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Email</label>
                          <input class="form-control" id="exampleInputPassword1" 
                            name="email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Mật khẩu</label>
                          <input class="form-control" id="exampleInputPassword1" 
                            name="MatKhau" value="{{MatKhau}}">
                    </div>
